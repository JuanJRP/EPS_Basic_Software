<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="CSS/Header.css">
    <link rel="stylesheet" href="CSS/Form_Style.css">
    <link rel="icon" href="Img/icono1.ico">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>ImaginaSalud EPS</title>
</head>
<body>
    <header>
        <section class="headers">
              <nav>
                  <ul>
                    <li><a href="/" style="text-decoration:none">Inicio</a></li>
                    <li><a href="/Usuarios" style="text-decoration:none">Usuarios</a></li>
                    <li><a href="/Doctores" style="text-decoration:none">Doctores</a></li>
                    <li><a href="/Citas" style="text-decoration:none">Citas</a></li>
                  </ul>
          </nav>
        </section>
    </header>
    <main>
        <section class="container">
            <section class="Formulario">
                <h1>Registro Citas</h1>
                <form action="">
                    <section class="form1">
                        <section class="labels">
                            <label for="">idUsuario</label>
                            <label for="">Apellido</label>
                            <label for="">Correo</label>
                            <label for="">Celular</label>
                            <label for="">Edad</label>
                            <label for="">Genero</label>
                        </section>
                        <section class="inputs">
                            <input type="number" value="">
                            <input type="text">
                            <input type="text">
                            <input type="text">
                            <input type="number">
                            <input type="number">
                            <section>
                                <input type="radio"> Hombre
                                <input type="radio"> Mujer
                            </section>
                        </section>
                    </section>
                </form>
            </section>
            <section class="Griv">
                <table>
                    <thead>
                        <tr>
                            <th>ID Citas</th>
                            <th>ID Usuario</th>
                            <th>ID Doctor</th>
                            <th>Fecha Cita</th>
                            <th>Lugar</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach(function(resultado) { %>
                            <tr>
                                <td><%= resultado.idCitas %></td>
                                <td><%= resultado.IdUsuario %></td>
                                <td><%= resultado.IdDoctor %></td>
                                <td style="width: 350px;"><%= resultado.FechaCita %></td>
                                <td><%= resultado.Lugar %></td>
                                <td style="width: 180px;">
                                    <a href="" class='botonInfo'>Editar <i class='bx bx-edit-alt'></i></a>
                                    <a href="" class="botonDanger">Borrar <i class='bx bx-x-circle'></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>
        </section>
    </main>
</body>
</html>