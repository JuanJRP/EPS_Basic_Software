<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="CSS/Header.css">
    <link rel="stylesheet" href="CSS/Form_Style.css">
    <link rel="icon" href="Img/icono1.ico">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>ImaginaSalud EPS</title>
</head>
<body>
    <header>
        <section class="headers">
              <nav>
                  <ul>
                    <li><a href="/" style="text-decoration:none">Inicio</a></li>
                    <li><a href="/Usuarios" style="text-decoration:none">Usuarios</a></li>
                    <li><a href="/Doctores" style="text-decoration:none">Doctores</a></li>
                    <li><a href="/Citas" style="text-decoration:none">Citas</a></li>
                  </ul>
          </nav>
        </section>
    </header>
    <main>
        <section class="container">
            <section class="Formulario">
                <h1>Registro Usuarios</h1>
                <form action="/obtenerDatos" method="post">
                    <section class="form1">
                        <section class="labels">
                            <label for="">idUsuario</label>
                            <label for="">Apellido</label>
                            <label for="">Nombre</label>
                            <label for="">Correo</label>
                            <label for="">Celular</label>
                            <label for="">Edad</label>
                            <label for="">Genero</label>
                        </section>
                        <section class="inputs">
                            <input type="number" placeholder="Ingrese su ID" id="intento2">
                            <input type="text" placeholder="Ingrese su Apellido">
                            <input type="text" placeholder="Ingrese su Nombre">
                            <input type="text" placeholder="Ingrese su Correo">
                            <input type="text" placeholder="Ingrese su Celular">
                            <input type="number" placeholder="Ingrese su Edad">
                            <section>
                                <input type="radio"> Hombre
                                <input type="radio"> Mujer
                            </section>
                        </section>
                    </section>  
                    <button type="" onclick="" name="accion" value="enviar">Enviar Formulario</button>
                    <button type="" name="" value="" onclick="">Guardar</button>
                </form>
            </section>
            <section class="Griv">
                <div id="resultado">
                    <table id="clickTable">
                        <thead>
                            <tr>
                                <th>ID Usuario</th>
                                <th>Apellido</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Celular</th>
                                <th>Edad</th>
                                <th>Genero</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% datos.forEach(function(resultado) { %>
                                <% let genero = (resultado.genero === 1) ? "Hombre" : "Mujer"; %>
                                <tr>
                                    <td id="intento"><%= resultado.IdUsuario %></td>
                                    <td><%= resultado.apellido %></td>
                                    <td><%= resultado.nombre %></td>
                                    <td><%= resultado.Correo %></td>
                                    <td><%= resultado.Celular %></td>
                                    <td><%= resultado.edad %></td>
                                    <td><%= genero %></td>
                                    <td style="width: 180px;">
                                        <a href="" class='botonInfo' onclick="algo()" >Editar <i class='bx bx-edit-alt'></i></a>
                                        <a href="" class="botonDanger">Borrar <i class='bx bx-x-circle'></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </section>
        </section>
    </main>
    <script src="Js/Usuarios.js"></script>
</body>
</html>